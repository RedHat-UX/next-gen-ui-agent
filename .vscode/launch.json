{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/libs"
            },
        },
        {
            "name": "Python Debugger: MCP Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/libs/next_gen_ui_mcp",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/libs"
            },
            "args": [
                "--debug",
                "--provider", "langchain",
                "--model", "gpt-4o-mini",
                "--port", "9200",
                "--transport", "streamable-http",
                // "--tools", "generate_ui_component",
                // "--structured_output_enabled", "false",
                // "--config-path", "${workspaceFolder}/../ngui_openshift_mcp_config.yaml"
            ],
        },
        {
            "name": "Python Debugger: distribution-all",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/tests/distribution-all"
            },
        },
        {
            "name": "Python Debugger: streamlit",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "console": "integratedTerminal",
            "args": [
                "run", "${file}",
                "--server.runOnSave", "True"
            ],
        },
        {
            "name": "tests/gui_streamlit/app.py",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "console": "integratedTerminal",
            "args": [
                "run", "tests/gui_streamlit/app.py",
                "--server.runOnSave", "True"
            ],
        },
        {
            "name": "Debug NGUI E2E-Edit Server",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload",
                "--host", "127.0.0.1",
                "--port", "8000"
            ],
            "cwd": "${workspaceFolder}/tests/ngui-e2e-edit/server",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/libs:${workspaceFolder}/tests",
                "LLM_MODEL": "llama3.2:3b",
                "LLM_BASE_URL": "http://localhost:11434/v1"
            },
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}