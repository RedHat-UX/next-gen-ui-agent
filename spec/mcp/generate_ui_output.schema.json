{
  "$defs": {
    "DataField": {
      "description": "UI Component Field Metadata.",
      "properties": {
        "name": {
          "description": "Field name to be shown in the UI",
          "type": "string"
        },
        "data_path": {
          "description": "JSON Path pointing to the input data structure to be used to pickup values to be shown in UI",
          "type": "string"
        }
      },
      "required": [
        "name",
        "data_path"
      ],
      "title": "DataField",
      "type": "object"
    },
    "Rendition": {
      "description": "Rendition of the component - output of the UI rendering step.",
      "properties": {
        "id": {
          "type": "string"
        },
        "component_system": {
          "type": "string"
        },
        "mime_type": {
          "type": "string"
        },
        "content": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "component_system",
        "mime_type",
        "content"
      ],
      "title": "Rendition",
      "type": "object"
    },
    "UIBlock": {
      "description": "UI Block model with all details",
      "properties": {
        "id": {
          "type": "string"
        },
        "rendering": {
          "anyOf": [
            {
              "$ref": "#/$defs/Rendition"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "configuration": {
          "anyOf": [
            {
              "$ref": "#/$defs/UIComponentMetadata"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        }
      },
      "required": [
        "id"
      ],
      "title": "UIBlock",
      "type": "object"
    },
    "UIComponentMetadata": {
      "description": "UI Component Metadata - output of the component selection and configuration step.",
      "properties": {
        "id": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "title": {
          "type": "string"
        },
        "reasonForTheComponentSelection": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "confidenceScore": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "component": {
          "type": "string"
        },
        "fields": {
          "items": {
            "$ref": "#/$defs/DataField"
          },
          "type": "array"
        },
        "json_data": {
          "anyOf": [
            {},
            {
              "type": "null"
            }
          ],
          "default": null
        }
      },
      "required": [
        "title",
        "component",
        "fields"
      ],
      "title": "UIComponentMetadata",
      "type": "object"
    }
  },
  "description": "MCP Output for Generate UI",
  "properties": {
    "blocks": {
      "items": {
        "$ref": "#/$defs/UIBlock"
      },
      "type": "array"
    },
    "summary": {
      "type": "string"
    }
  },
  "required": [
    "blocks",
    "summary"
  ],
  "title": "MCPGenerateUIOutput",
  "type": "object"
}