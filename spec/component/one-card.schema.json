{
  "$defs": {
    "DataFieldSimpleValue": {
      "description": "Component field description with data containing one value obtained from the input_data to be rendered as a dynamic component of the \"one object\" type.\nThe data value can be simple value or arrays of simple values to be rendered as a one field of the UI component.",
      "properties": {
        "name": {
          "description": "Field name",
          "type": "string"
        },
        "data_path": {
          "description": "JSON Path to input data",
          "type": "string"
        },
        "data": {
          "default": [],
          "description": "Data matching `data_path` from `input_data`",
          "items": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "integer"
              },
              {
                "type": "number"
              },
              {
                "type": "boolean"
              }
            ]
          },
          "type": "array"
        }
      },
      "required": [
        "name",
        "data_path"
      ],
      "title": "DataFieldSimpleValue",
      "type": "object"
    }
  },
  "description": "Component Data for OneCard.",
  "properties": {
    "component": {
      "const": "one-card",
      "default": "one-card",
      "type": "string"
    },
    "id": {
      "description": "id of the backend data this component is for",
      "type": "string"
    },
    "title": {
      "description": "title of the component",
      "type": "string"
    },
    "fields": {
      "items": {
        "$ref": "#/$defs/DataFieldSimpleValue"
      },
      "type": "array"
    },
    "image": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Main Image URL"
    }
  },
  "required": [
    "id",
    "title",
    "fields"
  ],
  "title": "ComponentDataOneCard",
  "type": "object"
}