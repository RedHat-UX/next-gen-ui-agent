{# RHDS Table component from https://ux.redhat.com/elements/card/ #}
{# TODO: We're currently not using call to action link #}
{# TODO: Image doesn't work properly so adding additional <div id="one-card-image-text"> and little bit styling#}

<rh-card class="example-fast-facts-card">
  <h2 slot="header">{{title}}</h2>
  <div id="one-card-image-text">
  {% if image %}
  <div class="img"><img src="{{image}}" slot="image" alt="{{title}}"></div>
  {% endif %}
  {% if fields|length > 1 %}
    <div>
      {% for f in fields %}
          <h4>{{f.get("name")}}</h4>
          <p>{{f.get("data") if f.get("data")|length > 1 else f.get("data")[0]}}</p>
        </li>
      {% endfor %}
    </div>
  {% elif fields|length == 1 %}
    <p>{{fields[0].get("data") if fields[0].get("data")|length > 1 else fields[0].get("data")[0]}}</p>
  {% endif %}
  {#<rh-cta slot="footer" priority="primary">
    <a href="#">Call to action</a>
  </rh-cta>#}
  </div>
</rh-card>

<style>
  rh-card {
    & h2 {
      font-size: initial;
    }
  }
  #one-card-image-text {
    display: flex;
    gap: 1rem;
  }
  #one-card-image-text .img {
    width: 50%;
  }
</style>

<script type="module">
  import '@rhds/elements/rh-cta/rh-cta.js';
  import '@rhds/elements/rh-card/rh-card.js';
</script>